<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTool"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/output_field"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@color/colorAccent"
        android:gravity="bottom|end"
        android:padding="10dp"
        android:textSize="42sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_7"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/seven_btn"
            android:layout_weight="1"
            android:onClick="onDigit"
            app:cornerRadius="4dp"
            tools:ignore="NestedWeights" />
        <Button
            android:id="@+id/btn_8"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/eight_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/btn_9"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/nine_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_divide"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/div_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/four_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,NestedWeights" />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/five_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/six_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_multi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/multi_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/one_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/two_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/three_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/sub_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onDigit"
            android:text="@string/zero_btn"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:cornerRadius="4dp"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/clear_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/add_divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@string/add_btn"
            app:cornerRadius="4dp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            android:text="@string/equal_btn"
            app:cornerRadius="4dp"
            />
    </LinearLayout>

</LinearLayout>